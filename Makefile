# Makefile for the AW_Lib
#
# @author Marcelo Cora√ßa de Freitas <marcelo.batera@gmail.com> 

ifndef ($(PREFIX))
	PREFIX=/usr/local
endif

ifndef ($(INCLUDE_PREFIX))
	INCLUDE_PREFIX=$(PREFIX)/include/kowsec-entities
endif

ifndef ($(LIB_PREFIX))
	LIB_PREFIX=$(PREFIX)/lib
endif
ifndef ($(GPR_PREFIX)) 
	GPR_PREFIX=$(LIB_PREFIX)/gnat 
endif



projectFile="kowsec-entities.gpr"


libs:
	gnatmake -P ${projectFile}

all: libs


clean:
	gnatclean -P ${projectFile}
	@echo "All clean"

docs:
	@-./gendoc.sh
	@echo "The documentation is generated by a bash script. Then it might fail in other platforms"



gprfile:
	@echo "Preparing GPR file.."
	@echo version:=\"$(VERSION)\" > gpr/kowsec-entities.def
	@echo prefix:=\"$(PREFIX)\" >> gpr/kowsec-entities.def
	@echo lib_prefix:=\"$(LIB_PREFIX)\" >> gpr/kowsec-entities.def
	@echo include_prefix:=\"$(INCLUDE_PREFIX)\" >> gpr/kowsec-entities.def
	@gnatprep gpr/kowsec-entities.gpr.in gpr/kowsec-entities.gpr gpr/kowsec-entities.def

gprclean:
	@rm -f gpr/*gpr
	@rm -f gpr/*.def


install: gprfile
	@echo "Installing files"
	install -d $(INCLUDE_PREFIX)
	install -d $(LIB_PREFIX)
	install -d $(GPR_PREFIX)
	install src/* -t $(INCLUDE_PREFIX)
	install lib/* -t $(LIB_PREFIX)
	install gpr/*.gpr -t $(GPR_PREFIX)
	make gprclean
