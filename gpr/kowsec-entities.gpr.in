with "kowconfig";
with "kowent";
with "kowlib";
with "kowsec";


project KOWSec.Entities is

	version := KOWLib.version;
	prefix	:= $prefix;
	
	for Source_Dirs use ( prefix & "/include/kowsec-entities" ) ;
	
	-- LIBRARY
	for Library_Dir use prefix & "/lib";
	for Library_Name use "kowsec-ent";
	for Library_Kind use KOWLib'Library_Kind;
	for Library_Version use "libkowsec-ent.so." & Version;
	for Externally_Built use "true";
	
	
	package Compiler is
		for Default_Switches ("Ada") use ("-O2", "-gnat05");
	end Compiler;

	package Linker is
		for Default_Switches ( "Ada" ) use KOWLib.Linker'Default_Switches( "Ada" );
	end Linker;
end KOWSec.Entities;

